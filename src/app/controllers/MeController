const Course = require('../models/Course')
class MeController {
    storedCourses(req, res, next) {
        Course.find({}).lean()
            .then(courses => {
                console.log('Các khóa học: ',courses); // Kiểm tra dữ liệu trả về
                // Nếu không có lỗi, trả về danh sách khóa học dưới dạng JSON
                res.render('me/storedCourses', { courses })
            })
            .catch(err => {
                // Nếu có lỗi, xử lý lỗi và trả về một trạng thái lỗi hoặc thông báo
                next(err);
                res.status(500).json({ error: 'Internal Server Error' });
            });


    }
    storedNews(req, res, next) {
        res.send('News page');
    }
}
module.exports = new MeController;